<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="SIGN UP"
       android:id="@+id/signup"
       android:layout_marginTop="30dp"
       android:textStyle="bold"
       android:textSize="30dp"
       android:layout_marginLeft="20sp"
       />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="180sp"
        android:layout_marginLeft="240dp"
        android:src="@drawable/food"
        android:scaleType="fitEnd"
        android:id="@+id/foodIV"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="55dp"
        android:text="Log In"
        android:layout_below="@id/foodIV"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:id="@+id/logIn"
        android:layout_marginLeft="20sp"
        android:fontFamily="serif-monospace"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Enter your Email"
        android:layout_below="@id/logIn"
        android:layout_marginLeft="20sp"
        android:id="@+id/email"
        android:textColor="@color/colorBlack"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/Password"
        android:layout_marginLeft="20sp"
        android:text="Enter your Password "
        android:layout_below="@id/email"
        android:textColor="@color/colorBlack"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:layout_below="@id/Password"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ForgetPW"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="Let's Cook..!!!"
        android:background="@drawable/cook_background"
        android:id="@+id/Lets_Cook"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_below="@id/ForgetPW"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="250dp"
        android:padding="30dp"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20sp"
        android:src="@drawable/broccoli"
        android:layout_below="@id/Lets_Cook"
        android:layout_marginTop="20sp"
        android:scaleType="fitEnd"
        android:id="@+id/broccoli"/>






















</RelativeLayout>