<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightgreen"
    tools:context=".download_page">



    <ImageView
        android:id="@+id/IconIV"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/broccoli" />

    <Button
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/back"
        android:layout_marginLeft="20dp" />

    <ProgressBar
        android:id="@+id/ProgressBar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="550dp"
        android:background="@drawable/progressbar"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textgallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/IconIV"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:textColor="@color/colorBlack"
        android:text="Image Area"

        android:textSize="20sp"
        android:textStyle="italic"
        android:visibility="visible" />

    <EditText
        android:id="@+id/imageNameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageToDownloadIV"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="10dp"
        android:hint="Enter Image Name Here"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="5dp"
        android:paddingStart="10dp"

        android:textStyle="bold"
        android:paddingLeft="10dp" />

    <ImageView
        android:id="@+id/imageToDownloadIV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/IconIV"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/imageDownloadBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageNameET"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/loginbtn_background"
        android:paddingStart="10dp"
        android:text="Download Image"
        android:textColor="@color/coloGreen"
        android:textStyle="bold"
        android:paddingLeft="10dp" />



</RelativeLayout>